<Window x:Class="IGUWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IGUWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <WrapPanel Background="LightGray" VerticalAlignment="Center">
            <Button Content="Configuracion grafica" Margin="3" />
        </WrapPanel>

        <Grid Margin="3" MinHeight="380">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border BorderThickness="1" BorderBrush="Black"  Grid.Column="0" Margin="3">
                <StackPanel>
                    
                    <Button Name="AddFuncionButton" HorizontalAlignment="Left" Margin="3">
                        <StackPanel>
                            <Image Source="Images\BasicIcons\plus.png" Width="20" Height="20"/>
                        </StackPanel>
                    </Button>

                        
                    <ScrollViewer>
                        <StackPanel >

                            <Border BorderThickness="1" BorderBrush="Black" Margin="3">
                                <WrapPanel>
                                    <Label Content="Function1"/>
                                    <Button Name="ViewButtonF1" HorizontalAlignment="Right" Margin="3">
                                        <StackPanel>
                                            <Image Source="Images\BasicIcons\minus.png" Width="20" Height="20"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="EditButtonF1" HorizontalAlignment="Right" Margin="3">
                                        <StackPanel>
                                            <Image Source="Images\BasicIcons\checked.png" Width="20" Height="20"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="DeleteButtonF1" HorizontalAlignment="Right" Margin="3">
                                        <StackPanel>
                                            <Image Source="Images\BasicIcons\unchecked.png" Width="20" Height="20"/>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>
                            </Border>

                            <Border BorderThickness="1" BorderBrush="Black" Margin="3">
                                <WrapPanel>
                                    <Label Content="Function2"/>
                                </WrapPanel>
                            </Border>

                            <Border BorderThickness="1" BorderBrush="Black" Margin="3">
                                <WrapPanel>
                                    <Label Content="Function3"/>
                                </WrapPanel>
                            </Border>



                        </StackPanel>
                    </ScrollViewer>

                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black"  Margin="3" DockPanel.Dock="Top" Grid.Column="1" >
            <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Canvas Name="FunctionDrawingPanel" Background="Green" Grid.Row="0"/>

                    <WrapPanel DockPanel.Dock="Bottom" Grid.Row="1">
                        <Label Name="XAxisValueLabel" Content="X:" Margin="0,5"/>
                        <Label Name="YAxisValueLabel" Content="Y:" Margin="0,5"/>
                    </WrapPanel>
                </Grid>
            </Border>

        </Grid>

    </StackPanel>
</Window>
